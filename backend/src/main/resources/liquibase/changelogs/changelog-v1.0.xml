<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
	<!--<include file="liquibase/changelog/initial_schema.xml" relativeToChangelogFile="false"/>-->
	<!-- Create Table COMMANDS -->
	<changeSet id="createTableCommands" author="luiz_borges">
		<createTable tableName="COMMANDS">
			<column name="COMMAND_ID" type="INTEGER" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="COMMAND_NUMBER" type="INTEGER" />
			<column name="COMMAND_VALUE" type="NUMBER(10,2)"
				defaultValueNumeric="0" />
			<column name="DATETIME_COMMAND" type="TIMESTAMP" />
		</createTable>
	</changeSet>
	<!-- Create Table PRODUCTS -->
	<changeSet id="createTableProducts" author="luiz_borges">
		<createTable tableName="PRODUCTS">
			<column name="PRODUCT_ID" type="INTEGER" autoIncrement="true">
				<constraints primaryKey="true" nullable="true" />
			</column>
			<column name="PRODUCT_NAME" type="VARCHAR(255)" />
			<column name="PRODUCT_VALUE" type="NUMBER(10,2)"
				defaultValueNumeric="0" />
			<column name="PRODUCT_TYPE" type="VARCHAR(50)" />
		</createTable>
	</changeSet>
	<!-- Create Table PRODUCT_COMMAND -->
	<changeSet id="createTableProductCommand" author="luiz_borges">
		<createTable tableName="PRODUCT_COMMAND">
			<column name="PRODUCT_DEMAND_ID" type="INTEGER" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="PC_QUANTITY" type="NUMBER(10,2)" />
			<column name="PC_DATETIME_ORDER" type="DATE" />
			<column name="PRODUCT_ID" type="INTEGER" />
			<column name="COMMAND_ID" type="INTEGER" />
			<column name="PC_MEASUREMENT" type="VARCHAR(2)" />
		</createTable>
	</changeSet>

	<!-- Tabela: Payments_methods -->
	<changeSet id="createPaymentsMethodsTable" author="luiz_borges">
		<createTable tableName="Payments_methods">
			<column name="pm_id" type="NUMBER" autoIncrement="true">
				<constraints primaryKey="true" />
			</column>
			<column name="pm_name" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>
			<column name="payday" type="TIMESTAMP">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<!-- Tabela: Suppliers -->
	<changeSet id="createSuppliersTable" author="luiz_borges">
		<createTable tableName="Suppliers">
			<column name="supplier_id" type="NUMBER" autoIncrement="true">
				<constraints primaryKey="true" />
			</column>
			<column name="supplier_name" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>
			<column name="supplier_segment" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>
			<column name="delivery_forecast" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>
			<column name="cnpj" type="VARCHAR(14)">
				<constraints nullable="false" />
			</column>
			<column name="phone_01" type="NUMBER">
				<constraints nullable="false" />
			</column>
			<column name="address" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>
			<column name="city" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>
			<column name="state" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>
			<column name="status" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>

			<column name="payment_method_id" type="NUMBER">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<!-- Tabela: Feedstocks -->
	<changeSet id="createFeedstocksTable" author="luiz_borges">
		<createTable tableName="Feedstocks">
			<column name="feedstock_id" type="NUMBER">
				<constraints primaryKey="true" />
			</column>
			<column name="feedstock_name" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>
			<column name="amount_availble" type="NUMBER(10,2)">
				<constraints nullable="false" />
			</column>
			<column name="pc_measurement" type="VARCHAR(2)">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<!-- Tabela: Supplier_Feedstock_Offer -->
	<changeSet id="createSupplierFeedstockOfferTable" author="luiz_borges">
		<createTable tableName="Supplier_Feedstock_Offer">
			<column name="sf_offer_id" type="NUMBER">
				<constraints primaryKey="true" />
			</column>
			<column name="supplier_id" type="NUMBER">
				<constraints nullable="false" />
			</column>
			<column name="feedstock_id" type="NUMBER">
				<constraints nullable="false" />
			</column>
			<column name="quantity_can_supply" type="NUMBER(10,2)">
				<constraints nullable="false" />
			</column>
			<column name="pc_measurement" type="VARCHAR(2)">
				<constraints nullable="false" />
			</column>
			<column name="sf_offer_value" type="NUMBER(10,2)">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<!-- Tabela: Supplier_Feedstock -->
	<changeSet id="createSupplierFeedstockTable" author="luiz_borges">
		<createTable tableName="Supplier_Feedstock">
			<column name="sf_id" type="NUMBER">
				<constraints primaryKey="true" />
			</column>
			<column name="date_arrive" type="TIMESTAMP">
				<constraints nullable="false" />
			</column>
			<column name="date_solicitation" type="TIMESTAMP">
				<constraints nullable="false" />
			</column>
			<column name="sf_price" type="NUMBER(10,4)">
				<constraints nullable="false" />
			</column>
			<column name="sf_date_feedstock_end" type="DATE">
				<constraints nullable="false" />
			</column>
			<column name="sf_status" type="VARCHAR(40)">
				<constraints nullable="false" />
			</column>
			<column name="supplier_id" type="NUMBER">
				<constraints nullable="false" />
			</column>
			<column name="feedstock_id" type="NUMBER">
				<constraints nullable="false" />
			</column>
			<column name="quantity_supplied" type="NUMBER(10,2)">
				<constraints nullable="false" />
			</column>
			<column name="quantity_solicited" type="NUMBER(10,2)">
				<constraints nullable="false" />
			</column>
			<column name="pc_measurement" type="VARCHAR(2)">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<!-- Tabela: Feedstock_Product -->
	<changeSet id="createFeedstockProductTable" author="luiz_borges">
		<createTable tableName="Feedstock_Product">
			<column name="fp_id" type="NUMBER">
				<constraints primaryKey="true" />
			</column>
			<column name="datetime_ready" type="TIMESTAMP">
				<constraints nullable="false" />
			</column>
			<column name="fp_amount_contained" type="NUMBER(10,2)">
				<constraints nullable="false" />
			</column>
			<column name="feedstock_id" type="NUMBER">
				<constraints nullable="false" />
			</column>
			<column name="product_id" type="NUMBER">
				<constraints nullable="false" />
			</column>
			<column name="pc_measurement" type="VARCHAR(2)">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>


	<!-- Chaves estrangeiras -->

	<!-- Chave estrangeira na tabela Suppliers -->
	<changeSet id="addFkSuppliersPaymentMethods" author="luiz_borges">
		<addForeignKeyConstraint baseTableName="Suppliers"
			baseColumnNames="payment_method_id"
			constraintName="fk_suppliers_payment_methods"
			referencedTableName="Payments_methods"
			referencedColumnNames="pm_id" />
	</changeSet>

	<!-- Chave estrangeira na tabela Supplier_Feedstock_Offer -->
	<changeSet id="addFkSupplierFeedstockOfferSuppliers" author="luiz_borges">
		<addForeignKeyConstraint baseTableName="Supplier_Feedstock_Offer"
			baseColumnNames="supplier_id"
			constraintName="fk_supplier_feedstock_offer_suppliers"
			referencedTableName="Suppliers"
			referencedColumnNames="supplier_id" />
	</changeSet>

	<!-- Chave estrangeira na tabela Supplier_Feedstock_Offer (feedstock_id) -->
	<changeSet id="addFkSupplierFeedstockOfferFeedstocks" author="luiz_borges">
		<addForeignKeyConstraint baseTableName="Supplier_Feedstock_Offer"
			baseColumnNames="feedstock_id"
			constraintName="fk_supplier_feedstock_offer_feedstocks"
			referencedTableName="Feedstocks"
			referencedColumnNames="feedstock_id" />
	</changeSet>

	<!-- Chave estrangeira na tabela Supplier_Feedstock -->
	<changeSet id="addFkSupplierFeedstockSuppliers" author="luiz_borges">
		<addForeignKeyConstraint baseTableName="Supplier_Feedstock"
			baseColumnNames="supplier_id"
			constraintName="fk_supplier_feedstock_suppliers"
			referencedTableName="Suppliers"
			referencedColumnNames="supplier_id" />
	</changeSet>

	<!-- Chave estrangeira na tabela Supplier_Feedstock (feedstock_id) -->
	<changeSet id="addFkSupplierFeedstockFeedstocks" author="luiz_borges">
		<addForeignKeyConstraint baseTableName="Supplier_Feedstock"
			baseColumnNames="feedstock_id"
			constraintName="fk_supplier_feedstock_feedstocks"
			referencedTableName="Feedstocks"
			referencedColumnNames="feedstock_id" />
	</changeSet>

	<!-- Chave estrangeira na tabela Feedstock_Product (feedstock_id) -->
	<changeSet id="addFkFeedstockProductFeedstocks" author="luiz_borges">
		<addForeignKeyConstraint baseTableName="Feedstock_Product"
			baseColumnNames="feedstock_id"
			constraintName="fk_feedstock_product_feedstocks"
			referencedTableName="Feedstocks"
			referencedColumnNames="feedstock_id" />
	</changeSet>

	<!-- Chave estrangeira na tabela Feedstock_Product (product_id) -->
	<changeSet id="addFkFeedstockProductProducts" author="luiz_borges">
		<addForeignKeyConstraint baseTableName="Feedstock_Product"
			baseColumnNames="product_id"
			constraintName="fk_feedstock_product_products"
			referencedTableName="PRODUCTS" referencedColumnNames="PRODUCT_ID" />
	</changeSet>

	<!-- Add Foreign Key Constraint for PRODUCT_COMMAND to COMMANDS -->
	<changeSet id="addForeignKeyCommand" author="luiz_borges">
		<addForeignKeyConstraint baseTableName="PRODUCT_COMMAND"
			baseColumnNames="COMMAND_ID"
			referencedTableName="COMMANDS" referencedColumnNames="COMMAND_ID"
			constraintName="FK_PRODUCT_COMMAND_COMMANDS" />
	</changeSet>
	<!-- Add Foreign Key Constraint for PRODUCT_COMMAND to PRODUCTS -->
	<changeSet id="addForeignKeyProducts" author="luiz_borges">
		<addForeignKeyConstraint baseTableName="PRODUCT_COMMAND"
			baseColumnNames="PRODUCT_ID"
			referencedTableName="PRODUCTS" referencedColumnNames="PRODUCT_ID"
			constraintName="FK_PRODUCT_COMMAND_PRODUCTS" />
	</changeSet>

	<!-- SequÃªncias -->

	<changeSet id="createSequenceCommandsSeq" author="luiz_borges">
		<createSequence sequenceName="COMMANDS_SEQ" incrementBy="1"
			startValue="1" />
	</changeSet> 
	<changeSet id="createSequenceProductCommandSeq" author="luiz_borges">
		<createSequence sequenceName="PRODUCT_COMMAND_SEQ" incrementBy="1"
			startValue="1" />
	</changeSet>
	<changeSet id="createSequenceProductsSeq" author="luiz_borges">
		<createSequence sequenceName="PRODUCTS_SEQ" incrementBy="1"
			startValue="1" />
	</changeSet>

	<changeSet id="createPaymentsMethodsSeq" author="luiz_borges">
		<createSequence sequenceName="Payments_methods_SEQ" startValue="1"
			incrementBy="1" />
	</changeSet>

	<changeSet id="createSuppliersSeq" author="luiz_borges">
		<createSequence sequenceName="Suppliers_SEQ" startValue="1"
			incrementBy="1" />
	</changeSet>

	<changeSet id="createFeedstocksSeq" author="luiz_borges">
		<createSequence sequenceName="Feedstocks_SEQ" startValue="1"
			incrementBy="1" />
	</changeSet>

	<changeSet id="createSupplierFeedstockOfferSeq" author="luiz_borges">
		<createSequence sequenceName="Supplier_Feedstock_Offer_SEQ"
			startValue="1" incrementBy="1" />
	</changeSet>

	<changeSet id="createSupplierFeedstockSeq" author="luiz_borges">
		<createSequence sequenceName="Supplier_Feedstock_SEQ" startValue="1"
			incrementBy="1" />
	</changeSet>

	<changeSet id="createFeedstockProductSeq" author="luiz_borges">
		<createSequence sequenceName="Feedstock_Product_SEQ" startValue="1"
			incrementBy="1" />
	</changeSet>



</databaseChangeLog>